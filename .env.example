# Application database connection
DATABASE_URL='postgresql://user:password@host:5432/clarity?sslmode=require'

# Admin database connection (for migrations)
MASTER_DATABASE_URL='postgresql://admin:password@host:5432/postgres?sslmode=verify-full'

# Setup secret for admin endpoints (generate a strong random string)
SETUP_SECRET='your-setup-secret-here'

# Encryption key for Durable Object storage (generate with: openssl rand -hex 16)
ENCRYPTION_KEY='your-32-char-hex-key-here'

# Anthropic API key (https://console.anthropic.com/)
ANTHROPIC_API_KEY='sk-ant-...'

# (Optional) Doppler configuration
# DOPPLER_CONFIG=dev_agent
# DOPPLER_TOKEN=dp.st...

# (Optional) Google SSO
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=GOCSPX-...

# JWT secret for session tokens (generate with: openssl rand -hex 32)
# JWT_SECRET=your-64-char-hex-key-here
